<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secret Number Game</title>
    </head>
<body>
    <h1>Secret Number Game</h1>
    <div class="message" id="message"></div>

    <script>
        // Secret number (can be any number)
        var secretNumber = 7;

        // Initialize points
        var points = 0;

        // Function to prompt the user for their favorite number
        function getGuess() {
            var guess = prompt("Enter your favorite number (between 1 and 10):");

            // Check if the input is a valid number
            if (isNaN(guess) || guess === null || guess.trim() === "") {
                alert("Please enter a valid number!");
                return getGuess(); // Re-prompt if input is invalid
            }

            return parseInt(guess); // Convert input to a number
        }

        // Get the user's guess
        var userGuess = getGuess();

        // Compare the guess to the secret number
        if (userGuess === secretNumber) {
            points += 10; // Award 10 points if the guess is correct
            document.getElementById("message").innerHTML = `
                🎉 Congratulations! You guessed the secret number (${secretNumber}). 
                <br>You earned <span class="points">${points} points</span>!
            `;
        } else {
            document.getElementById("message").innerHTML = `
                😔 Sorry, the secret number was ${secretNumber}. 
                <br>You earned <span class="points">${points} points</span>. Better luck next time!
            `;
        }
    </script>
</body>
</html>